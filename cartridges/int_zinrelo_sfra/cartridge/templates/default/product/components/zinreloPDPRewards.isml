<isset name="zinreloPDPData" value="${pdict.zinreloPDPData}" scope="page" />
<isif condition="${zinreloPDPData.isZinreloEnabled && zinreloPDPData.isZinreloRewardsEnabledOnPDP && !empty(zinreloPDPData.zinreloPDPRewardsText)}">
    <div class="zinreloPDPRewardContainer ${product && product.zinreloPrice > 0 ? '' : 'd-none'}">
        <isprint value="${zinreloPDPData.zinreloPDPRewardsText}" encoding="off" />
        <input type="hidden" class="zinreloProductPrice" value="${product.zinreloPrice}" />
        <input type="hidden" class="zinreloProductCategories" value="${product.productCategories ? JSON.stringify(product.productCategories) : ''}" />
        <input type="hidden" class="zinreloProductID" value="${product.id}" />
    </div>
</isif>